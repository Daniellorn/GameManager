<Window x:Class="GameManager.View.EditGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameManager.View"
        mc:Ignorable="d"
        Title="EditGameWindow" 
        Height="450" 
        Width="800"
        AllowsTransparency="True"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent">

    <Border Background="#272537"
            CornerRadius="10"
            MouseDown="Border5_MouseDown">


        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Height="auto">


                <TextBlock  Text="ID"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Foreground="White"
                            FontSize="20"
                            Margin="10,15,0,0"/>

                <TextBox    Width="125"
                            Height="25"
                            HorizontalAlignment="Left"
                            Margin="10"
                            FontSize="15"
                            x:Name="IDBox"/>


                <TextBlock  Text="Title"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Foreground="White"
                            FontSize="20"
                            Margin="10,40,0,0"/>

                <TextBox    Width="125"
                            Height="25"
                            HorizontalAlignment="Left"
                            Margin="10"
                            FontSize="15"
                            x:Name="EditTitleBox"/>

                <TextBlock  Text="Developer"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Foreground="White"
                            FontSize="20"
                            Margin="10,40,0,0"/>

                <TextBox    Width="125"
                            Height="25"
                            HorizontalAlignment="Left"
                            Margin="10"
                            FontSize="15"
                            x:Name="EditDeveloperBox"/>


                <TextBlock  Text="Rating"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Foreground="White"
                            FontSize="20"
                            Margin="10,40,0,0"/>

                <TextBox    Width="125"
                            Height="25"
                            HorizontalAlignment="Left"
                            Margin="10"
                            FontSize="15"
                            x:Name="EditRatingBox">
                </TextBox>

            </StackPanel>

            <TextBlock Grid.Column="1"
                       Text="Review"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="20"
                       Margin="100,70,0,0"/>

            <TextBox Width="350"
                     Height="250"
                     FontSize="15"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Grid.Column="1"
                     Margin="100,20,0,0"
                     Padding="5"
                     TextWrapping="Wrap"
                     x:Name="EditReviewBox"/>

            <Button Content="Edit Game"
                    Width="150"
                    Height="30"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,30" 
                    Click="EditGame_Click"/>


            <Button x:Name="EditClose_Button"
                    Content="Close"
                    Width="150"
                    Height="30"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,200,30" Click="EditClose_Button_Click"/>

        </Grid>

    </Border>


</Window>
